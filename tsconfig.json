{
	"compilerOptions": {
	  "target": "es5",
	  "lib": [
		"dom",
		"dom.iterable",
		"esnext"
	  ],
	  "baseUrl": "./",
	  "paths": {
		"@/*": ["src/*"],
		"@i18n/*": ["i18n/*"],
		"@components/*": ["src/components/*"],
		"@assets/*": ["public/static/assets/*"],
		"@constants/*": ["src/constants/*"],
		"@layouts/*": ["src/layouts/*"],
		"@stores/*": ["src/stores/*"]
	  },
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": false,
	  "forceConsistentCasingInFileNames": true,
	  "downlevelIteration": true,
	  "declaration": true,
	  "noEmit": true,
	  "esModuleInterop": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "jsx": "preserve"
	},
	"include": [
	  "next-env.d.ts",
	  "**/*.ts",
	  "**/*.tsx", "server.js",
	],
	"exclude": [
	  "node_modules",
	]
}
  